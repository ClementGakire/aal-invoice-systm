{
  "functions": {
    "functions/**/*.{mjs,ts}": {
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/clients",
      "destination": "/functions/clients"
    },
    {
      "source": "/api/invoices",
      "destination": "/functions/invoices"
    },
    {
      "source": "/api/jobs",
      "destination": "/functions/jobs"
    },
    {
      "source": "/api/(.*)",
      "destination": "/functions/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
